def notify_roadhouse(message)
  Net::HTTP.post-form(
    URI('https://api.pushover.net/1/messages'),
    user: ENV['PUSHOVER_USER'],
    token: ENV['PUSHOVER_TOKEN'],
    message: message
  )
end
