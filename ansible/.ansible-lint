---
# This is a custom ansible-lint configuration for CI environments
skip_list:
  - 'fqcn[action-core]'  # Allow using short module names instead of FQCN
  - 'var-naming[read-only]'  # Allow using special variables like role_name
  - 'name[casing]'  # Allow emoji in task names
  - 'name[template]'  # Allow Jinja templates in task names
  - 'yaml[truthy]'  # Allow yes/no for boolean values
  - 'no-changed-when'  # Allow commands without changed_when

# Exclude specific files from linting
exclude_paths:
  - 'playbooks/site.yml'  # Exclude site.yml from syntax checking
