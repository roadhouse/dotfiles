# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="pygmalion"

# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
alias roll="cd /Users/RoadHouse/code/ruby/love2roll"
function _basedir {
  basename `pwd`
}

alias vim='/Applications/MacVim.app/Contents/MacOS/Vim '
alias vi=vim
alias ls="ls -G"
alias gvim='/Applications/MacVim.app/Contents/MacOS/Vim -g --servername `_basedir`'
alias s="rails s"
alias c="rails c"
alias g="git"
alias cvr="rake spec:rcov && open coverage/index.html"
alias td="tail -f log/development.log"
alias tt="tail -f log/test.log"
alias ensuremigrate="rake db:migrate && rake db:rollback && rake db:migrate && rake db:test:prepare"
alias bndj='bundle install --binstubs=bin_stubs --path=vendor/gems --without=production'

_rmate() {
  $(ls -1 | egrep -v "(diagrams|coverage|log|git|vendor|tmp|doc)" | egrep -v .DS_Store | xargs mate)
}
alias rmate="_rmate"

alias gmi='gem install'
alias ackr='ack --ruby'
alias res='touch tmp/restart.txt'
alias pg.start='pg_ctl -D /usr/local/var/postgre -l /usr/local/var/postgre/server.log start'
alias mongo.start='mongod run --config /usr/local/Cellar/mongodb/2.0.1-x86_64/mongod.conf'

# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"

# Comment this out to disable weekly auto-update checks
DISABLE_AUTO_UPDATE="true"

# Uncomment following line if you want to disable colors in ls
# DISABLE_LS_COLORS="true"

# Uncomment following line if you want to disable autosetting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment following line if you want red dots to be displayed while waiting for completion
COMPLETION_WAITING_DOTS="true"

unsetopt correct_all

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git brew cap github heroku rvm ruby thor vi-mode zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...
export PATH=./bin_stubs:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/local/sbin:$PATH

# set x86_64 flags
export CFLAGS="-arch x86_64 -O2"
export ARCHFLAGS="-arch x86_64"
export EDITOR=vi
export CDPATH=.:~/code/work/cinemateca/~:~/code:~/code/ruby:~/code/github/
export HISTIGNORE="&:[bf]g:exit"
export HISTCONTROL=ignoredups
export HISTCONTROL=ignoreboth
export GREP_OPTIONS="--color=auto"
export GREP_COLOR="4;33"
export CLICOLOR="auto"

export PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
# RBENV setup
# eval "$(rbenv init -)"
export PATH=./bin:$PATH
