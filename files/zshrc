# General config
CDPATH=.:~/code/
CLICOLOR="auto"
EDITOR=nvim
GREP_COLOR="4;33"
GREP_OPTIONS="--color=auto"
PATH=./bin:$HOME/.local/bin:/usr/local/bin:/snap/bin/:$PATH
TERM='tmux-256color'
setopt autocd
# ensures that all variables defined in the .env file become environment variables in your current shell session
set -o allexport; [ -f .env ] && source .env; set +o allexport

# History config, sharing across sessions
HISTCONTROL=ignoreboth
HISTDUP=erase
HISTFILE=~/.cache/zshhistory
HISTSIZE=10000
SAVEHIST=$HISTSIZE
HISTIGNORE="ls:cd:pwd:exit:history"
setopt appendhistory
setopt hist_find_no_dups
setopt hist_ignore_all_dups
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_save_no_dups
setopt sharehistory

# Vim mode
bindkey -v

# TAB TAB accept autosuggest
bindkey '^I^I' autosuggest-accept

# Customizations
files_to_load=(
  "/usr/share/doc/fzf/examples/completion.zsh"
  "/usr/share/doc/fzf/examples/key-bindings.zsh"
  "/usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh"
  "/usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"
  "$HOME/code/powerlevel10k/powerlevel10k.zsh-theme"
  "$HOME/code/dotfiles/zsh/p10k.zsh"
  "$HOME/code/dotfiles/zsh/machines/$(hostname).sh"
)
for file in "${files_to_load[@]}"; do [ -f $file ] && source $file; done
for file in $(ls -d ~/code/dotfiles/zsh/lang/*); do source $file; done
