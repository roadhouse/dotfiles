[alias]
        a = add -p
        st = status -sb
        ci = commit
        mci = log --pretty=format:'%ad - %s' --abbrev-commit --author=RoadHouse --date=short
        br = branch
        co = checkout
        com = checkout master
        cot = checkout --track
        s = stash
        sp = stash pop
        sl = stash list
        df = diff --word-diff
        who = shortlog -s --
        ps = push
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        plr = pull --rebase
        rebm = rebase master
        rec = rebase --continue
        rea = rebase --abort
        res = rebase --skip

[color]
        ui = auto

