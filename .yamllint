---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  document-start: disable
  truthy: disable
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  empty-lines:
    max: 2
    max-start: 1
    max-end: 1
