alias t="tmux"
alias ls="ls -G --color"
alias s="rails s"
alias c="rails c"
alias g="git"
alias bi='bundle install --binstubs=./bin_stubs --without=production'
alias gmi='gem install'
alias editconfig='nvim ~/.zshrc'
alias rehash='source ~/.zshrc'
alias dc='docker-compose'
alias apti='sudo apt-get install'
dclean() { sudo docker ps -a | grep Exit | cut -d ' ' -f 1 | xargs sudo docker rm }
dcr() { docker-compose run $@ }
tnewsession() { tmux new-session -s $1 }

ta() {
  if [ -z "$1"]; then
    tmux attach
  else
    tmux attach -t $1
  fi
}


CDPATH=.:~/code/
PATH=$HOME/.gems/bin:./bin_stubs:$HOME/.rvm/bin:$HOME/.local/bin:/usr/local/bin:/snap/bin/:$PATH

setopt appendhistory
setopt autocd
bindkey -v
bindkey "^R" history-incremental-pattern-search-backward
# History in cache directory:
HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.cache/zshhistory
CLICOLOR="auto"
EDITOR=nvim
GREP_OPTIONS="--color=auto"
HISTCONTROL=ignoreboth
HISTCONTROL=ignoredups
TERM='xterm-256color'
GREP_COLOR="4;33"
GEM_HOME=$HOME/.gems
GEM_PATH=$HOME/.gems

source ~/code/dotfiles/zsh/antigen.zsh
antigen theme romkatv/powerlevel10k
antigen apply

source /usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh
source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source ~/code/dotfiles/zsh/p10k.zsh

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
